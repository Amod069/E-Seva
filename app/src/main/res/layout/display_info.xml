<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >


 <androidx.cardview.widget.CardView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:layout_marginStart="60dp"
     android:background="@drawable/display_info"


     >

     <ImageView
         android:id="@+id/event_entity_image"
         android:layout_width="187dp"
         android:layout_height="240dp"
         android:layout_marginTop="50dp"
         android:layout_gravity="center_horizontal"
         android:src="@drawable/su" />

     <TextView
         android:id="@+id/event_entity_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="EVENT_NAME  "
         android:textSize="30sp"
         android:textStyle="bold"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="300dp"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Date : "
         android:textSize="20sp"
         android:textStyle="bold"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="350dp"
         />

     <TextView
         android:id="@+id/event_entity_date"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="80dp"
         android:layout_marginTop="350dp"
         android:text="20/2/2020"
         android:textSize="20sp"

         android:textStyle="bold" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Organizer : "
         android:textSize="20sp"
         android:textStyle="bold"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="390dp"
         />
     <TextView
         android:id="@+id/event_entity_organizer"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="ORGNIZER HU MAI"
         android:textSize="20sp"

         android:layout_marginLeft="120dp"

         android:layout_marginTop="390dp"
         />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Venue : "
         android:textSize="20sp"
         android:textStyle="bold"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="430dp"
         />
     <TextView
         android:id="@+id/event_entity_venue"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="ADDRESS"
         android:textSize="20sp"

         android:layout_marginLeft="90dp"

         android:layout_marginTop="430dp"
         />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="460dp"
         android:text="Description : "
         android:textSize="20sp"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/event_entity_description"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="135dp"
         android:layout_marginTop="460dp"

         android:text="ADDRESS"

         android:textSize="20sp" />


 </androidx.cardview.widget.CardView>





</androidx.appcompat.widget.LinearLayoutCompat>